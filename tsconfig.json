{
  "files": [],
  "baseUrl": "./",
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "types": ["node", "vite/client"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
  },
  "paths": {
    "src/*": ["src/*"],
    "@/*": ["src/*"]
  }
}
